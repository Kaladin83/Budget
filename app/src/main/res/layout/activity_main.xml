<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maratbe.budget.MainActivity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_weight="9"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="3dp"
        android:layout_weight="1"
        android:id="@+id/main_menu_layout"
        android:layout_height="0dp">

        <Button
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_marginEnd="14dp"
            android:layout_height="35dp"
            android:gravity="bottom"
            android:background="@drawable/my_category_menu_item"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/charts_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="22dp"
            android:gravity="bottom"
            android:background="@drawable/my_charts_menu_item"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/voice_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginEnd="22dp"
            android:gravity="bottom"
            android:background="@drawable/my_mic_menu_item"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="14dp"
            android:gravity="bottom"
            android:background="@drawable/my_edit_menu_item"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/sync_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="bottom"
            android:background="@drawable/my_sync_menu_item"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
